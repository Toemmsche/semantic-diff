{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",

    /* Language and Environment */
    "target": "esnext",

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
