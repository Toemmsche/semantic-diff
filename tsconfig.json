{
  "compilerOptions": {
    "declaration": true,

    /* Language and Environment */
    "target": "es2022",

    /* Modules */
    "module": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
